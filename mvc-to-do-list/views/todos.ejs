<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="css/style.css">
</head>
<body>
    <div class="todo__page-title-container">
        <h1>To-Do list</h1> 
    </div>
    <div class="todo__page-list-container">
        <ul class="todo__ul">
            <% todos.forEach( el => { %>
                <li class="todoItem" data-id="<%=el._id %>">
                    <span class="<%= el.completed === true ? 'completed' : 'not'%>"><%= el.todo %></span>
                    <span class='del'> Delete </span>
                </li>

            <% }) %>
        </ul>
    </div>
    <div class="todo__page-remaining-container">
        <span class="remaining">There are <%= left %> tasks remaining</span>
    </div>
    
    <div class="add__todo-container">
        <form action="/todos/addTodo" method="POST">
            <input type="text" placeholder="Enter Todo Item" name='todoItem'>
            <input type="submit">
        </form>
    </div>
    <script src="js/main.js"></script>
</body>
</html>